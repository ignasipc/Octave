[L,U,P,Q] = LU_maximal(T);

    % Tama√±o de la matriz
    n = size(T, 1);

    % Inicializar la matriz inversa
    T_inv = zeros(n, n);

    % Resolver el sistema para cada columna de la identidad
    for i = 1:n
        b = zeros(n, 1);
        b(i) = 1;

        % Resolver el sistema LUx = b
        y = L \ (P * b);
        x = U \ y;

        % Asignar la columna resultante a la matriz inversa
        T_inv(:, i) = x;
    end
